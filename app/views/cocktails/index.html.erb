<div>
  <%= render 'navbar'%>
</div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <% @cocktails.each do |cocktail| %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo %>');">
          <div class="card-category"><%= cocktail.name %></div>
          <div class="card-description">
            <p><%= link_to 'Show', cocktail_path(cocktail) %></p>
            <p class="btn-center"><%= link_to 'Delete', cocktail_path(cocktail),
            method: :delete, data: { confirm: "Are you sure?" } %></p>
          </div>
 <!--          <a class="card-link" href="#" ></a> -->
        </div>
      </div>
      <% end %>
    </div>
  </div>
