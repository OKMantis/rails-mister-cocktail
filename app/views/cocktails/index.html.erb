<div class="container" style="position: relative;">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h1>Cocktails#index</h1>
      <% @cocktails.each do |cocktail| %>
      <div class="product">
        <div class='product-upvote'>
          <div class="product-arrow"></div>
          <div class='product-count'>95</div>
        </div>
        <div class='product-body'>
          <h3><%= cocktail.name %></h3>
          <p><%= link_to 'Show', cocktail_path(cocktail) %></p>
        </div>
        <ul class="list-inline product-controls hidden-sm hidden-xs">
          <li><a href=""><i class="fa fa-heart"></i></a></li>
          <li><a href=""><i class="fa fa-share"></i></a></li>
          <li><a href=""><i class="fa fa-star"></i></a></li>
        </ul>
      </div>
      <% end %>
      <p><%= link_to 'Add Cocktail', new_cocktail_path, class: 'btn-treehouse' %></p>
    </div>
  </div>
</div>

