<div>
  <%= render 'navbar'%>
</div>

<div>
  <h2>Ingredients</h2>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <% @cocktail.doses.each do |dose| %>
  <ul>
    <li>
      <%= dose.description %>
      <%= link_to 'Delete', dose_path(dose),
      method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  </ul>
  <% end %>
</div>

